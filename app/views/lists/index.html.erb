<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4">All Lists (<%= pluralize(@lists.count, "list") %>)</h1>
    <%= link_to "Create New List", new_list_path, class: "btn btn-success" %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-title">
              <%= link_to list.name, list_path(list), class: "stretched-link text-decoration-none" %>
            </h5>
            <p class="text-muted"><%= pluralize(list.bookmarks.count, "movie") %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
